{
	"compilerOptions": {
		"outDir": "./dist",
		"target": "ES2022",
		"module": "esnext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"noUnusedParameters": true,
		"useDefineForClassFields": false,
		"types": ["node"],
		"noEmit": true,
		"allowJs": true,
		"baseUrl": "./",
		"paths": {
			"@src/*": ["src/*"],
			"@global/*": ["src/global/*"]
		}
	},
	"include": ["./src/**/*.ts", "./*.ts"]
}
